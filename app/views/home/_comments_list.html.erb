<div class="comments">
  <% @comments.each do |comment| %>
    <%= render "comment", :comment => comment %>
  <% end %>
</div>
<div class="comments_pagination">
  <% if @page > 1 %>
    <%= link_to "Prev", params.merge({ :page => @page - 1 }), :remote => true %>
  <% else %>
    <%= "Prev" %>
  <% end %>
  |
  <% if @comment_count >= @start_index + @max_results %>
    <%= link_to "Next", params.merge({ :page => @page + 1 }), :remote => true %>
  <% else %>
    <%= "Next" %>
  <% end %>
</div>
